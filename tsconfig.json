{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": "src",  
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}